{

 "compilerOptions": {
            "module": "ESNext",
            "target": "ESNext",
            "strict": false,
            "moduleResolution": "node",
            "esModuleInterop": true,
            "jsx": "preserve",
            "noEmit": true,
            "allowJs": true,
            "skipLibCheck": true,
            "typeRoots": [
                "node_modules/@types",
                "types"
            ]
 },
 "include": [
     "src",
    "types"
    ],

 "exclude": ["node_modules"]
}
